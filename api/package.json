{
  "name": "fp-lap2-project",
  "version": "1.0.0",
  "description": "Habit Tracker Web App for futureproof LAP2",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
